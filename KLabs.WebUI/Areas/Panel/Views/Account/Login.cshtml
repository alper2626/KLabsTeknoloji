
@{
    Layout = null;
}

<!DOCTYPE html>
@*@model KLabs.Entities.ComplexTypes.User.PostUserLoginModel*@
@model KLabs.Entities.ComplexTypes.User.PostUserRegisterModel
<html>
<head>
    <meta charset="utf-8" />
    <meta name="description" content="Kb Belge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Admin Panel Girişi</title>
    <!--begin::Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700|Roboto:300,400,500,600,700">
    <!--end::Fonts -->
    <script src="~/js/devextreme/jquery.js"></script>
    <link href="~/css/Layout/plugins.bundle.css" rel="stylesheet" />
    <link href="~/css/Layout/style.bundle.css" rel="stylesheet" />

    <link href="~/css/Layout/light.css" rel="stylesheet" />
    <link href="~/css/Layout/light-header.css" rel="stylesheet" />
    <link href="~/css/Layout/dark.css" rel="stylesheet" />
    <link href="~/css/Layout/dark-brand.css" rel="stylesheet" />

    <script src="~/js/Layout/scripts.bundle.js"></script>
    <script src="~/js/Layout/plugins.bundle.js"></script>
    <link href="~/css/Login/login-1.css" rel="stylesheet" />

</head>
<body class="kt-quick-panel--right kt-demo-panel--right kt-offcanvas-panel--right kt-header--fixed kt-header-mobile--fixed kt-subheader--enabled kt-subheader--fixed kt-subheader--solid kt-aside--enabled kt-aside--fixed kt-page--loading">
    @if (TempData["Error"] != null)
    {
        <input type="text" id="error" hidden="hidden" value="@TempData["Error"]" />
    }
    else if (TempData["Success"] != null)
    {
        <input type="text" id="success" hidden="hidden" value="@TempData["Success"]" />
    }
    <!-- begin:: Page -->
    <div class="kt-grid kt-grid--ver kt-grid--root">
        <div class="kt-grid kt-grid--hor kt-grid--root  kt-login kt-login--v1" id="kt_login">
            <div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--desktop kt-grid--ver-desktop kt-grid--hor-tablet-and-mobile">

                <!--begin::Aside-->
                <div class="kt-grid__item kt-grid__item--order-tablet-and-mobile-2 kt-grid kt-grid--hor kt-login__aside" style="background-image: url(../../assets/media/bg/bg-4.jpg);">
                    <div class="kt-grid__item">
                        <a href="#/" class="kt-login__logo">
                            @*<img src="../assets/media/logos/logo-4.png">*@
                        </a>
                    </div>
                    <div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--ver">
                        <div class="kt-grid__item kt-grid__item--middle">
                            <h3 class="kt-login__title">Kullanıcı Paneline Hoşgeldiniz!</h3>
                        </div>
                    </div>
                    <div class="kt-grid__item">
                        <div class="kt-login__info">
                            <div class="kt-login__copyright">
                                &copy; 2020 Alper
                            </div>
                            <div class="kt-login__menu">
                                <a href="#/" class="kt-link">Hakkımızda</a>
                                <a href="#/" class="kt-link">Ekibimiz</a>
                                <a href="#/" class="kt-link">İletişim</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!--begin::Aside-->
                <!--begin::Content-->
                <div class="kt-grid__item kt-grid__item--fluid  kt-grid__item--order-tablet-and-mobile-1  kt-login__wrapper">

                    <!--begin::Head-->
                    <div class="kt-login__head">
                        <span class="kt-login__signup-label">Hesabınız yoksa veya şifrenizi unuttuysanız yöneticiniz ile iletişime geçin.</span>
                    </div>

                    <!--end::Head-->
                    <!--begin::Body-->
                    <div class="kt-login__body">

                        <!--begin::Signin-->
                        <div class="kt-login__form">
                            <div class="kt-login__title">
                                <h3>Kullanıcı Girişi</h3>
                            </div>


                            <!--begin::Form-->
                            <form class="kt-form" method="post" asp-area="Panel" asp-controller ="Account" asp-action="Login" novalidate="novalidate" id="kt_login_form">
                                    @Html.AntiForgeryToken()
                                    <div class="form-group">
                                        
                                        @Html.TextBoxFor(w => w.Email, new {@class = "form-control", placeholder = "Mail Adresiniz"})
                                        @Html.ValidationMessageFor(w => w.Email)
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(w => w.Password, new { @class = "form-control", placeholder = "Şifreniz", type = "password" })
                                        @Html.ValidationMessageFor(w => w.Password)
                                    </div>


                                    <div class="kt-login__actions">
                                        <button id="kt_login_signin" type="submit" class="btn btn-primary btn-elevate kt-login__btn-primary">Giriş Yap</button>
                                    </div>


                                </form>

                            <!--end::Form-->
                        </div>

                        <!--end::Signin-->
                    </div>

                    <!--end::Body-->
                </div>

                <!--end::Content-->
            </div>
        </div>
    </div>

    <!-- end:: Page -->
    <!-- begin::Global Config(global config for global JS sciprts) -->
    <script>
        var KTAppOptions = {
            "colors": {
                "state": {
                    "brand": "#5d78ff",
                    "dark": "#282a3c",
                    "light": "#ffffff",
                    "primary": "#5867dd",
                    "success": "#34bfa3",
                    "info": "#36a3f7",
                    "warning": "#ffb822",
                    "danger": "#fd3995"
                },
                "base": {
                    "label": [
                        "#c5cbe3",
                        "#a1a8c3",
                        "#3d4465",
                        "#3e4466"
                    ],
                    "shape": [
                        "#f0f3ff",
                        "#d9dffa",
                        "#afb4d4",
                        "#646c9a"
                    ]
                }
            }
        };</script>

    <!-- end::Global Config -->


    <script src="~/js/Login/login-1.js"></script>
    <script src="~/js/toastr/toastr.js"></script>
    <script src="~/js/toastr/toast.js"></script>
    <script src="~/js/Layout/jquery.validate.js"></script>
    <script src="~/js/Layout/jquery.validate.unobtrusive.js"></script>
</body>

</html>
