@using KLabs.Business.Constants.Statics
@model KLabs.Entities.ComplexTypes.AboutUs.SendMailModel
@{
    ViewData["Title"] = "İletişim";
    ViewData["Keywords"] = "klabs teknoloji hakkımızda , iletisim sayfası";
    ViewData["Description"] = "klabs teknoloji hakkımızda ve iletişim sayfası";
}
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
@section Navigator{
    <!-- breadcrumb-area start -->
    <div class="breadcrumb-area">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb_box text-center">
                        <h2 class="breadcrumb-title">İletişim</h2>
                        <!-- breadcrumb-list start -->
                        <ul class="breadcrumb-list">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                            <li class="breadcrumb-item active">İletişim </li>
                        </ul>
                        <!-- breadcrumb-list end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb-area end -->
}

<!--====================  Contact us Section Start ====================-->
<div class="contact-us-section-wrappaer section-space--pt_100 section-space--pb_70">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-lg-6">
                <div class="conact-us-wrap-one mb-30">
                    <h3 class="heading">Daha fazla bilgiye<br>ihtiyacınız varsa, <br><span class="text-color-primary">bizimle</span> iletişime geçin. </h3>
                    <div class="sub-heading">Biraz zamana ihtiyacımız var ! <br> En geç 2 gün içerisinde dönüş yapacağız.</div>
                </div>
            </div>

            <div class="col-lg-6 col-lg-6">
                <div>
                    <form asp-controller="Home" asp-action="SendMail" method="post">
                        <div>
                            <div class="contact-inner">
                                @Html.TextBoxFor(s => s.Name, new { placeholder = "Adınız Soyadınız *" })
                                @Html.ValidationMessageFor(s => s.Name)
                            </div>
                            <div class="contact-input">
                                <div class="contact-inner">
                                    @Html.TextBoxFor(s => s.PhoneNumber, new { placeholder = "Telefon Numaranız *" })
                                    @Html.ValidationMessageFor(s => s.PhoneNumber)
                                </div>
                                <div class="contact-inner">
                                    @Html.TextBoxFor(s => s.Email, new { placeholder = "Mail Adresiniz *" })
                                    @Html.ValidationMessageFor(s => s.Email)
                                </div>
                            </div>
                            <div class="contact-inner">
                                @Html.TextBoxFor(s => s.Subject, new { placeholder = "Konu *" })
                                @Html.ValidationMessageFor(s => s.Subject)
                            </div>
                            <div class="contact-inner contact-message">
                                @Html.TextAreaFor(s => s.Description, new { placeholder = "Size Nasıl Yardımcı Olabiliriz *", rows = 5 })
                                @Html.ValidationMessageFor(s => s.Description)
                            </div>
                            <div class="contact-inner">
                                <div class="g-recaptcha" data-sitekey="6Le5X8EZAAAAANLAucoZjzAB6kIHoxxXy2fBubYc"></div>
                            </div>

                            <div class="submit-btn mt-20">
                                <button class="ht-btn ht-btn-md" type="submit">Gönder</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!--====================  Contact us Section End  ====================-->



<div class="cta-image-area_one section-space--ptb_80 cta-bg-image_two">
    <div class="container">
        <div class="row align-items-center">
            <div class="contact-us-info-wrappaer section-space--pb_100">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-12 col-md-12">
                            <div class="conact-info-wrap mt-30">
                                <h5 class="heading mb-20">Kütahya</h5>
                                <ul class="conact-info__list">
                                    <li>@StaticMember.AboutUs.Address</li>
                                    <li><a href="mailto:@StaticMember.AboutUs.MailAddress" class="hover-style-link text-color-primary">@StaticMember.AboutUs.MailAddress</a></li>
                                    <li><a href="tel:@StaticMember.AboutUs.PhoneNumber" class="hover-style-link text-black font-weight--bold">@StaticMember.AboutUs.PhoneNumber</a></li>
                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>