@using KLabs.Business.Constants.Statics
@{
    ViewData["Title"] = "Hakkımızda";
    ViewData["Keywords"] = "klabs teknoloji hakkımızda ";
    ViewData["Description"] = "klabs teknoloji hakkımızda sayfası";
}
<div class="about-banner-wrap banner-space about-us-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 ml-auto mr-auto">
                <div class="about-banner-content text-center">
                    <h1 class="mb-15 text-white">Hakkımızda</h1>
                    @foreach (var item in StaticMember.AboutUs.Description.Split("&&"))
                    {
                        <p class="font-weight--normal text-white">
                            @item
                        </p>
                    }
                    
                </div>
            </div>
        </div>
    </div>
</div>
<!--===========  feature-large-images-wrapper  Start =============-->
<div class="feature-large-images-wrapper section-space--ptb_100">
    <div class="container">

        <div class="row">
            <div class="col-12">
                <div class="feature-images__six">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 wow move-up">
                            <!-- ht-box-icon Start -->
                            <div class="ht-box-images style-06">
                                <div class="image-box-wrap">
                                    <div class="box-image">
                                        <div class="default-image">
                                            <img class="img-fulid" src="assets/images/icons/mitech-box-image-style-06-image-01-120x120.png" alt="klabs teknoloji hakkımızda">
                                        </div>
                                    </div>
                                    <div class="content">
                                        <h5 class="heading">Sizin için ne yapabiliriz ?</h5>
                                        <div class="text">
                                            Firmanıza en uygun çözümü sunabilmek için ihtiyaçlarınıza odaklanıp birlikte karar alıyoruz.
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <!-- ht-box-icon End -->
                        </div>


                        <div class="col-lg-6 col-md-6 wow move-up">
                            <!-- ht-box-icon Start -->
                            <div class="ht-box-images style-06">
                                <div class="image-box-wrap">
                                    <div class="box-image">
                                        <div class="default-image">
                                            <img class="img-fulid" src="assets/images/icons/mitech-box-image-style-06-image-03-120x120.png" alt="klabs teknoloji hakkımızda">
                                        </div>
                                    </div>
                                    <div class="content">
                                        <h5 class="heading">Yardıma ihtiyacınız var mı ?</h5>
                                        <div class="text">
                                            Hafta içi her gün 09:00 - 18:00 saatleri arasında iletişim kanallarımızdan bize ulaşabilirsiniz.
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <!-- ht-box-icon End -->
                        </div>

                    </div>
                </div>

                <div class="section-under-heading text-center section-space--mt_60">
                    İşinizi kolaylaştırmak.
                    <a href="#/">Bizim işimiz !</a>
                </div>

            </div>
        </div>
    </div>
</div>
<!--===========  feature-large-images-wrapper  End =============-->
<!--============ Contact Us Area Start =================-->
<div class="contact-us-area infotechno-contact-us-bg section-space--pt_100">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <div class="image">
                    <img class="img-fluid" src="assets/images/banners/robot.png" alt="klabs teknoloji hakkımızda">
                </div>
            </div>

            <div class="col-lg-4 ml-auto">
                <div class="contact-info style-two text-left">

                    <div class="contact-list-item">
                        <a href="tel:190068668" class="single-contact-list">
                            <div class="content-wrap">
                                <div class="content">
                                    <div class="icon">
                                        <span class="fal fa-phone"></span>
                                    </div>
                                    <div class="main-content">
                                        <h6 class="heading">Şimdi Arayın!</h6>
                                        <div class="text">
                                            <a href="tel:@StaticMember.AboutUs.PhoneNumber" class="hover-style-link text-black font-weight--bold">@StaticMember.AboutUs.PhoneNumber</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                        <a href="mailto:@StaticMember.AboutUs.MailAddress" class="single-contact-list">
                            <div class="content-wrap">
                                <div class="content">
                                    <div class="icon">
                                        <span class="fal fa-envelope"></span>
                                    </div>
                                    <div class="main-content">
                                        <h6 class="heading">Mail Gönderin</h6>
                                        <a href="mailto:@StaticMember.AboutUs.MailAddress" class="hover-style-link text-color-primary">@StaticMember.AboutUs.MailAddress</a>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!--============ Contact Us Area End =================-->