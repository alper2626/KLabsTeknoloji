@model KLabs.Entities.Concrete.Privacy
@{
    ViewData["Title"] = "Gizlilik Politikası";
    ViewData["Keywords"] = "klabs teknoloji yazılım firması, Eskişehir yazılım firması, Kütahya yazılım firması";
    ViewData["Description"] = "klabs teknoloji gizlilik politikası. Kütahya yazılım firması. Eskişehir yazılım firması. Web sitesi ve otomasyon yaptırmak istiyorsanız en doğru adrestesiniz. Güvenilir yazılımlar.";
}
@section Navigator{
    <!-- breadcrumb-area start -->
    <div class="breadcrumb-area">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb_box text-center">
                        <h2 class="breadcrumb-title">Gizlilik Politikamız</h2>
                        <!-- breadcrumb-list start -->
                        <ul class="breadcrumb-list">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                            <li class="breadcrumb-item active">Gizlilik Politikamız </li>
                        </ul>
                        <!-- breadcrumb-list end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb-area end -->
}
<!--===========  feature-large-images-wrapper  Start =============-->
<div class="feature-large-images-wrapper section-space--ptb_100">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <!-- section-title-wrap Start -->
                <div class="section-title-wrap text-center section-space--mb_30">
                    <h3 class="heading mb-20">Gizliliğe <span class="text-color-primary">önem</span> veriyoruz, <br> işiniz bizim için <span class="text-color-primary">değerli.</span> </h3>

                        @foreach (var item in Model.Description.Split("&&"))
                        {
                            <p class="title-dec-text">
                                @item
                            </p>
                            <br />
                        }
                    
                </div>
                <!-- section-title-wrap Start -->
            </div>
        </div>

    </div>



</div>
<!--===========  feature-large-images-wrapper  End =============-->