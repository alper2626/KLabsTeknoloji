@model List<KLabs.Entities.ComplexTypes.Reference.HomePageReferenceSwiperModel>
@{
    ViewData["Title"] = "Referanslarımız";
    ViewData["Keywords"] = "klabs teknoloji yazılım firması, Eskişehir yazılım firması, Kütahya yazılım firması,klabs teknoloji referanslar";
    ViewData["Description"] = "klabs teknoloji anasayfa. Kütahya yazılım firması. Eskişehir yazılım firması. klabs teknoloji referanslar. ";
}
@section Navigator{
    <!-- breadcrumb-area start -->
    <div class="breadcrumb-area">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb_box text-center">
                        <h2 class="breadcrumb-title">Referanslarımız</h2>
                        <!-- breadcrumb-list start -->
                        <ul class="breadcrumb-list">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                            <li class="breadcrumb-item active">Referanslarımız </li>
                        </ul>
                        <!-- breadcrumb-list end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb-area end -->
}

<!--===========  feature-icon-wrapper  Start =============-->
<div class="feature-icon-wrapper section-space--ptb_100">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-wrap text-center section-space--mb_40">
                    <h3 class="heading">Tüm <span class="text-color-primary"> referanslarımız</span></h3>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="feature-list__one">
                    <div class="row" id="load-references">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-3 col-md-6">
                                <!-- ht-box-icon Start -->
                                <div class="ht-box-icon style-01">
                                    <div class="icon-box-wrap">
                                        <div class="icon">
                                            <img class="img-fluid" src="@item.LogoPath" alt="@item.Name">
                                        </div>
                                        <div class="content">
                                            <h5 class="heading">@item.Name </h5>
                                            <div class="text">
                                                @item.Description
                                            </div>
                                            <div class="feature-btn">
                                                <a target="_blank" href="@item.Description">
                                                    <span class="button-text">Siteye Git</span>
                                                    <i class="far fa-long-arrow-right"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- ht-box-icon End -->
                            </div>
                        }


                    </div>
                    <div class="col-lg-12">
                        <div class="feature-list-button-box mt-40 text-center">
                            @if (Model.Count == 8)
                            {
                                <a class="ht-btn ht-btn-md btn-primary" style="color:white" id="load-more" onclick="loadMore()">Devamını Gör</a>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--===========  feature-icon-wrapper  End =============-->

<div class="cta-image-area_one section-space--ptb_80 cta-bg-image_one">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-xl-12 col-lg-12">
                <div class="cta-content text-center">
                    <h4 class="heading text-white">
                        Sizleride aramızda görmekten mutluluk duyarız.
                        <span class="text-color-secondary">
                            <a asp-action="ContactUs" asp-controller="AboutUs"> Hemen iletişime geçin !</a>
                        </span>
                    </h4>
                </div>
            </div>

        </div>
    </div>
</div>
@section scripts{

    <script src="~/js/Reference/Reference.js"></script>

}