@using KLabs.Business.Constants.Statics
@using KLabs.Entities.Enums
@model KLabs.Entities.ComplexTypes.Solution.SolutionDetailPageModel
@{
    ViewData["Title"] = Model.Name;
    ViewData["Keywords"] = "klabs teknoloji yazılım firması, Eskişehir yazılım firması, Kütahya yazılım firması,klabs teknoloji çözümleri,otomasyon çözümleri,yapay zeka çözümleri,web mobil çözümler";
